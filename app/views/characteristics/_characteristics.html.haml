.row
  .span6
    = semantic_form_for(@character, url: characteristic_url, remote: true) do |f|
      %table.table.table-striped.table-condensed.span10
        %thead
          %th Characteristic
          %th Species
          %th Talents
          %th Attach
          %th Item
          %th Buy
          %th Final

        - @character.characteristics.each do |cc|
          %tr
            %td= cc.name
            %td= cc.species_amount
            %td= cc.talent_amount
            %td= cc.attach_amount
            %td= cc.item_amount
            %td.rank
              = select_tag("character[purchased_char_ranks][#{cc.id}]", options_for_select(0..5, cc.purchased_amount))
            %td= cc.total_amount
