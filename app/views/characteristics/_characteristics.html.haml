.row
  .span10
    = semantic_form_for(@character, url: characteristic_url, remote: true) do |f|
      %table.edit-characteristics.table.table-striped.table-condensed.span5
        %thead
          %th Species
          %th Talents
          %th Attach
          %th Item
          %th Buy
          %th Final

        - @character.characteristics.each do |cc|
          %tr.values
            %td= cc.species_amount
            %td= cc.talent_amount
            %td= cc.attach_amount
            %td= cc.item_amount
            %td.buy
              = select_tag("character[purchased_char_ranks][#{cc.id}]", options_for_select(0..5, cc.purchased_amount))
            %td.characteristic
              .value= cc.total_amount
              .name= cc.name
