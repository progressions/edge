%h1 Characters

- if current_user
  %p= link_to("New Character", character_build_url(:start, character_id: "new"))
- else
  %p= link_to("New Character", users_url(create_character: true), method: :post)


%table.table.table-bordered
  %tr
    %th Name
    %th
  - @characters.each do |character|
    %tr
      %td= link_to(character.name, character_url(character))
      %td= link_to("Delete", character_url(character), method: "delete")

