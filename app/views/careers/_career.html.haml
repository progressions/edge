.row
  = semantic_form_for(@character, url: career_url, remote: true) do |f|
    .span6
      = f.input :career, as: :select, include_blank: false, collection: @careers

      .description.well
        = format_description(@character.career.description)

    .span4
      %h4 Career Skills

      .controls
        - skill_ids = @character.career_skills_by_career.pluck(:id)
        - @character.character_skills.where(skill_id: skill_ids).each do |cs|
          %label.checkbox
            = hidden_field_tag("character[career_skill_ranks[#{cs.skill.id}]][]", false)
            = check_box_tag("character[career_skill_ranks[#{cs.skill.id}]][]", true, cs.career_amount > 0)
            = cs.name

    .form-actions
      = f.submit(class: "btn btn-large btn-success")


.row
  .span6
    = semantic_form_for(@character, url: career_url, remote: true) do |f|
      = f.input :first_specialization, as: :select, include_blank: false, collection: @specializations

      .description.well
        = format_description(@character.first_specialization.try(:description))

  .span4
    = semantic_form_for(@character, url: career_url, remote: true) do |f|
      %h4 Specialization Skills

      .controls
        - skill_ids = @character.career_skills_by_first_specialization.pluck(:id)
        - @character.character_skills.where(skill_id: skill_ids).each do |cs|
          %label.checkbox
            = hidden_field_tag("character[specialization_skill_ranks[#{cs.skill.id}]][]", false)
            = check_box_tag("character[specialization_skill_ranks[#{cs.skill.id}]][]", true, cs.specialization_amount > 0)
            = cs.name

    .controls

