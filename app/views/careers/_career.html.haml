-# encoding: utf-8

= semantic_form_for(@character, url: career_url, remote: true) do |f|
  .row
    .span6
      = f.input :career, as: :select, include_blank: false, collection: @careers

      .description.well
        = format_description(@character.career.description)

    .span4
      %h4 Career Skills

      .controls
        - @career_skills.each do |skill|
          %label.checkbox
            = hidden_field_tag("character[career_skill_ids[#{skill.id}]][]", false)
            = check_box_tag("character[career_skill_ids[#{skill.id}]][]", true, @character.career_skills.include?(skill))
            = skill.name

  .row
    .span6
      = f.input :first_specialization, as: :select, include_blank: false, collection: @specializations

      .description.well
        = format_description(@character.first_specialization.try(:description))

    .span4
      %h4 Specialization Skills

      .controls
        - @specialization_skills.each do |skill|
          %label.checkbox
            = hidden_field_tag("character[career_skill_ids[#{skill.id}]][]", false)
            = check_box_tag("character[career_skill_ids[#{skill.id}]][]", true, @character.career_skills.include?(skill))
            = skill.name

      .controls


  .form-actions
    = f.submit(class: "btn btn-large btn-success")

