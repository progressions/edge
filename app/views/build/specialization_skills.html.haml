- @active = :specialization_skills

%h1= @character.name

%h2 Select Character's Specialization Skills

%p
  For each specialization, you may choose
  = pluralize(@character.species.specialization_skills_count, "different skill")
  to gain a rank in.

.form-horizontal
  = form_for @character, url: wizard_path(:first_specialization_skills), method: :put do |f|
    - if @character.errors.any?
      .errors
        %ul.unstyled
          - @character.errors.full_messages.each do |message|
            %li.text-error= message

    - @character.specializations.each_with_index do |specialization, i|

      %h3= specialization.name
      %p= specialization.career_skills.join(", ")

      - @character.species.specialization_skills_count.times do |j|
        .optional_skill.control-group{class: "optional_skill_#{j+i}"}
          %label.control-label{for: "optional_skill_#{j+i}"} Skill
          .controls
            = select_tag("character[optional_skills][]", options_for_select(specialization.career_skills), id: "optional_skill_#{j+i}")

    .control-group
      .controls.message

    .form-actions
      = f.submit "Save and Continue", class: "btn btn-success"
