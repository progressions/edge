- @active = :species

%h1= @character.name

%h2 Select Character Species

- if @character.species.present?
  %p NOTE that changing your species will reset your Attributes and your spent Experience Points!

.form-horizontal
  = form_for @character, url: wizard_path, method: :put do |f|
    .non_js
      .control-group
        %label.control-label{for: "character_species_id"} Species

        .controls
          = f.select(:species_id, options_from_collection_for_select(@all_species, :id, :name))

    .species.js_only
      - @all_species.each do |species|
        .species_module.module.well{id: identifier(species.name)}
          %input.hidden{type: "hidden", value: species.id}

          %h2= species.name

          .image

          %ul.characteristics.unstyled
            %li
              %strong Br
              .characteristic
                = species[:brawn]
            %li
              %strong Ag
              .characteristic
                = species[:agility]
            %li
              %strong In
              .characteristic
                = species[:intellect]
            %li
              %strong Cu
              .characteristic
                = species[:cunning]
            %li
              %strong Wi
              .characteristic
                = species[:willpower]
            %li
              %strong Pr
              .characteristic
                = species[:presence]

          .clearfix

          %p
            %strong Base XP
            100

          %p
            %strong Wound Threshold
            Brawn +
            = species.wound_threshold_modifier

          %p
            %strong Strain Threshold
            Willpower +
            = species.strain_threshold_modifier

    .form-actions
      = f.submit "Save and Continue", class: "btn btn-success"

